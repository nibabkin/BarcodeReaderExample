<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>
        <item name="colorAccent">@color/md_red_A200</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteEditTextTheme">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

    <style name="RedButtonTheme">
        <item name="colorButtonNormal">@color/md_red_500</item>
    </style>

    <style name="GreenButtonTheme">
        <item name="colorButtonNormal">@color/md_green_500</item>
    </style>
</resources>
